{
  "name": "Initium",
  "version": "0.0.0",
  "scripts": {
    "webpack": "source config/env && webpack --config ./src/webpack.config.js",
    "scss": "node-sass --source-map-embed src/scss/main.scss dist/main.css && npm run postcss",
    "postcss": "postcss -u autoprefixer -r dist/main.css",
    "watch:js": "npm run webpack -- --watch",
    "watch:css": "onchange 'src/scss/*.scss' 'src/scss/imports/*.scss' -v -i -- npm run scss",
    "watch:html": "onchange './src/app/components/**/*.html' -v -i -- cp -Ru src/app dist",
    "watch": "npm run watch:js & npm run watch:css & npm run watch:html",
    "start": "npm run dist && npm run watch",
    "predist": "rm -rf dist && mkdir -p ./dist/{assets,libs}",
    "dist": "cp -R src/{assets,libs,index.html,manifest.json,receiver.html,sw.js,ww.js} dist",
    "build:css": "npm run scss && csso dist/main.css dist/main.css",
    "build:js": "ng2-inline /src/app/components/ && npm run webpack -- --env.prod",
    "postbuild:js": "rm -rf ./src/app/components/ && mv ./src/app/components.old ./src/app/components",
    "build": "npm run dist && npm run build:css && npm run build:js"
  },
  "dependencies": {
    "@angular/common": "^4.1.1",
    "@angular/compiler": "^4.1.1",
    "@angular/core": "^4.1.1",
    "@angular/forms": "^4.1.1",
    "@angular/platform-browser": "^4.1.1",
    "@angular/platform-browser-dynamic": "^4.1.1",
    "dropbox": "^2.5.3",
    "rxjs": "^5.4.0",
    "zone.js": "^0.8.10"
  },
  "devDependencies": {
    "angular2-template-inline": "^1.0.6",
    "autoprefixer": "^7.0.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-preset-angular2": "0.0.2",
    "babel-preset-env": "^1.4.0",
    "csso-cli": "^1.0.0",
    "eslint": "^3.19.0",
    "eslint-plugin-compat": "^1.0.2",
    "node-sass": "^4.5.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.0.0",
    "webpack": "^2.5.1"
  },
  "browserslist": [
    "Chrome >= 49"
  ]
}
