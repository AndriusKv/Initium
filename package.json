{
  "name": "Initium",
  "version": "0.0.0",
  "scripts": {
    "webpack": "source config/env && webpack --progress --config ./src/webpack.config.js",
    "scss": "node-sass --source-map-embed src/scss/main.scss dist/css/main.css && npm run postcss",
    "postcss": "postcss -u autoprefixer -r dist/css/main.css",
    "watch:js": "cp -R src/app dist/app && npm run webpack -- --watch",
    "watch:css": "onchange 'src/scss/*.scss' 'src/scss/imports/*.scss' -i -- npm run scss",
    "watch": "npm run watch:js & npm run watch:css",
    "start": "npm run dist && npm run watch",
    "predist": "rm -rf dist && mkdir -p ./dist/{assets,css,js,libs}",
    "dist": "cp -R src/{assets,libs,index.html,manifest.json,receiver.html,sw.js} dist",
    "build:css": "npm run scss && csso dist/css/main.css dist/css/main.css",
    "build:js": "ng2-inline /src/app/components/ && export ENV=prod && npm run webpack",
    "postbuild:js": "rm -rf ./src/app/components/ && mv ./src/app/components.old ./src/app/components",
    "build": "npm run dist && npm run build:css && npm run build:js"
  },
  "dependencies": {
    "@angular/common": "^2.4.5",
    "@angular/compiler": "^2.4.5",
    "@angular/core": "^2.4.5",
    "@angular/forms": "^2.4.5",
    "@angular/platform-browser": "^2.4.5",
    "@angular/platform-browser-dynamic": "^2.4.5",
    "dropbox": "^2.5.1",
    "rxjs": "^5.1.0",
    "zone.js": "^0.7.6"
  },
  "devDependencies": {
    "angular2-template-inline": "^1.0.6",
    "autoprefixer": "^6.7.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-class-properties": "^6.22.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-latest": "^6.22.0",
    "csso": "^2.3.1",
    "eslint": "^3.14.1",
    "node-sass": "^4.5.0",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.6.0",
    "webpack": "^2.2.1"
  },
  "browserslist": [
    "Chrome > 45"
  ]
}
