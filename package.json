{
  "name": "Initium",
  "version": "0.0.0",
  "scripts": {
    "js": "webpack --progress --config ./src/webpack.config.js",
    "scss": "node-sass src/scss/main.scss --source-map-embed src/css/main.css && npm run autoprefixer",
    "autoprefixer": "postcss --use autoprefixer src/css/main.css -d src/css",
    "watch:js": "webpack --progress --devtool inline-source-map --config ./src/webpack.config.js --watch",
    "watch:css": "onchange 'src/scss/*.scss' 'src/scss/imports/*.scss' -- npm run scss",
    "watch": "npm run watch:js & npm run watch:css",
    "start": "npm run scss & npm run watch",
    "build:html": "cp ./src/index.html dist",
    "build:css": "npm run scss && csso ./src/css/main.css ./dist/css/main.css",
    "build:js": "ng2-inline /src/app/components/ && webpack --progress --config ./src/webpack.config.js -p && cp -R ./src/js ./dist",
    "postbuild:js": "rm -rf ./src/app/components/ && mv ./src/app/components.old ./src/app/components",
    "build:libs": "cp -R ./src/js/libs ./dist/js",
    "build:resources": "cp -R ./src/resources ./dist",
    "build:others": "cp ./src/{sw.js,manifest.json,receiver.html} ./dist",
    "prebuild": "rm -rf ./dist && mkdir -p ./dist/{css,js/libs,resources}",
    "build": "npm run build:html && npm run build:css && npm run build:js && npm run build:libs && npm run build:resources && npm run build:others"
  },
  "dependencies": {
    "@angular/common": "^2.3.0",
    "@angular/compiler": "^2.3.0",
    "@angular/compiler-cli": "^2.3.0",
    "@angular/core": "^2.3.0",
    "@angular/forms": "^2.3.0",
    "@angular/platform-browser": "^2.3.0",
    "@angular/platform-browser-dynamic": "^2.3.0",
    "dropbox": "^2.5.0",
    "reflect-metadata": "^0.1.8",
    "rxjs": "^5.0.0-rc.5",
    "zone.js": "^0.7.2"
  },
  "devDependencies": {
    "angular2-template-inline": "^1.0.6",
    "autoprefixer": "^6.5.3",
    "babel-core": "^6.20.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.9",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-angular2": "0.0.2",
    "babel-preset-latest": "^6.16.0",
    "csso": "^2.3.0",
    "eslint": "^3.12.0",
    "node-sass": "^4.0.0",
    "onchange": "^3.2.0",
    "postcss-cli": "^2.6.0",
    "webpack": "^1.14.0"
  }
}
