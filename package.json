{
  "name": "Initium",
  "version": "0.0.0",
  "license": "MIT",
  "repository": "",
  "scripts": {
    "webpack": "source config/env && webpack --config ./webpack.config.js",
    "scss": "node-sass --source-map-embed src/scss/main.scss dist/main.css && npm run postcss",
    "postcss": "postcss -u autoprefixer -r dist/main.css",
    "watch:js": "npm run webpack -- --watch",
    "watch:css": "onchange 'src/scss/*.scss' 'src/scss/imports/*.scss' -v -i -- npm run scss",
    "watch": "npm run watch:js & npm run watch:css",
    "start": "npm run dist && npm run watch",
    "predist": "rm -rf dist && mkdir -p ./dist/{assets,libs}",
    "dist": "cp -R src/{assets,libs,index.html,manifest.json,receiver.html,sw.js,ww.js} dist",
    "build:css": "npm run scss && csso dist/main.css dist/main.css",
    "build:js": "npm run webpack -- --env.prod",
    "build": "npm run dist && npm run build:css && npm run build:js"
  },
  "dependencies": {
    "@angular/common": "^4.2.4",
    "@angular/compiler": "^4.2.4",
    "@angular/core": "^4.2.4",
    "@angular/forms": "^4.2.4",
    "@angular/http": "^4.2.4",
    "@angular/platform-browser": "^4.2.4",
    "@angular/platform-browser-dynamic": "^4.2.4",
    "@angular/router": "^4.2.4",
    "core-js": "^2.4.1",
    "dropbox": "^2.5.4",
    "rxjs": "^5.4.1",
    "zone.js": "^0.8.12"
  },
  "devDependencies": {
    "@angular/cli": "^1.1.3",
    "@angular/compiler-cli": "^4.2.4",
    "@types/chrome": "^0.0.47",
    "autoprefixer": "^7.1.1",
    "codelyzer": "^3.1.1",
    "csso-cli": "^1.0.0",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.1.0",
    "raw-loader": "^0.5.1",
    "tslint": "^5.4.3",
    "typescript": "2.3.4",
    "url-loader": "^0.5.9",
    "webpack": "^3.0.0"
  },
  "browserslist": [
    "Chrome >= 49"
  ]
}
