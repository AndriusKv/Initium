{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "chrome",
      "node"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "files": ["./src/main.ts"],
  "angularCompilerOptions": {
    "preserveWhiteSpace": false
  }
}
